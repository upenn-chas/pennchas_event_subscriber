{% set linkAttributes = link['attributes'] %}
{% if ( link['url'] is defined and link['url'] is not empty ) %}
  {% set tag = "a" %}
  {% set href = " href='#{ link['url'] }'" %}
  {% set linkAttributes = linkAttributes.addClass('nav-link') %}
{% else  %}
  {% set tag = 'span' %}
  {% set href = '' %}
  {% set linkAttributes = linkAttributes.addClass('tb-megamenu-no-link nav-link') %}
  {% if submenu is empty %}
    {% set linkAttributes = linkAttributes.addClass('tb-megamenu-no-submenu nav-link') %}
  {% endif %}
{% endif %}
{% set classLI = 'menu-icon menu-icon-'~link['metadata']['entity_id'] %}
<li {{ attributes.addClass(classLI) }} >
  <{{ tag }}{{ href|raw }} {{ link['attributes'] }} role="button" aria-haspopup="true">
    {% if  item_config['xicon'] %}
      <i class="{{ item_config['xicon'] }}"></i>
    {% endif %}
    {{ link.title_translate|t }}
    {% if submenu and block_config['auto-arrow'] %}
      <span class="caret" role="none"><span class="sr-only-hidden">menu</span></span>
    {% endif %}
    {% if item_config['caption'] %}
      <span class="mega-caption"> {{ item_config['caption']|t }}</span>
    {% endif %}
  </{{ tag }}>
  {{ submenu }}
</li>
